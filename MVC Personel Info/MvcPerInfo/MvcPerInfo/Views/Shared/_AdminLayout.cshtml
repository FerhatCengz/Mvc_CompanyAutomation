@using MvcPerInfo.Models.Entity
@{
    Layout = null;
}
@{
    Db_MvcPersonelEntities db = new Db_MvcPersonelEntities();
    var session = Session["KAD"].ToString();
    var getir = (from x in db.Tbl_Kullanici where x.KAD == session select x.ID).FirstOrDefault().ToString();
    var idTUt = db.Tbl_Kullanici.Find(session);

    var duyuruSayisi = db.Tbl_Duyuru.Count(x => x.ID != 0).ToString();

}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 3 | Project Add</title>
    <!-- Tell the browser to be responsive to screen width -->
    <link href="~/Content/PagedList.css" rel="stylesheet" />

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="/AdminLTE-3.0.4/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <link href="~/Content/sweetalert2.min.css" rel="stylesheet" />
</head>
<body class="hold-transition sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">
        <!-- Navbar -->
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="//index3.html" class="brand-link text-center">
                <span class="brand-text font-weight-light ">
                    FC PLASTİK A.Ş
                    <br />
                    İŞLEM PANELİ
                </span>
            </a>
            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="@idTUt.ResimYolu" class="img-circle elevation-2" style="width:70px;" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="/Profil/Index/@getir" class="d-block mt-3">@Session["KAD"]</a>

                    </div>
                </div>
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
                             with font-awesome or any other icon font library -->
                        <li class="nav-item has-treeview">
                            <a href="/PerIslem/Index/" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    Vardiya Seç
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/MesajList/Index/" class="nav-link">
                                <i class="nav-icon fas fa-th"></i>
                                <p>
                                    Mesaj Gönder
                                </p>
                            </a>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="/GelenK/Index/" class="nav-link">
                                <i class="nav-icon fas fa-copy"></i>
                                <p>
                                    Mesajlar
                                </p>
                            </a>

                        </li>
                        <li class="nav-item has-treeview">
                            <a href="/CalismaTkvm/Index/" class="nav-link">
                                <i class="nav-icon far fa-calendar-alt"></i>
                                <p>
                                    Çalışma Takvimim
                                </p>
                            </a>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="/PerIslem/Duyuru/" class="nav-link">
                                <i class="nav-icon far fa-calendar-alt"></i>
                                <p>
                                    Duyurular
                                </p>

                                <span class="badge bg-danger float-right">@duyuruSayisi</span>
                            </a>
                        </li>

                        <br />
                        <li class="nav-item has-treeview">
                            <a href="/PerIslem/Exit/" class="nav-link">
                                <i class="fas fa-sign-out-alt"></i>
                                <p id="exit">
                                    Çıkış
                                </p>
                            </a>
                        </li>

                    </ul>

                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Main content -->
            <section class="content">
                <div class="row">

                    <div class="col-12 m-auto">
                        @RenderBody()

                    </div>

                </div>
            </section>
            <!-- /.content -->
        </div>

        <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="/AdminLTE-3.0.4/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="/AdminLTE-3.0.4/dist/js/demo.js"></script>
    <script src="~/Scripts/sweetalert2.all.min.js"></script>
    <script src="~/Scripts/app.js"></script>
</body>
</html>
